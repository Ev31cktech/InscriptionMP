<UserControl x:Class="Inscription_mp.Views.SetupScene.PlayerDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inscription_mp.Views.SetupScene"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="SwitchTeamRightBTN" Click="SwitchTeam" Content="▸" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
        <Label Grid.Column="1" x:Name="NameLBL" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="2" x:Name="SwitchTeamLeftBTN" Click="SwitchTeam" Content="◂" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
