<UserControl x:Class="Inscription_mp.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inscription_mp"
             mc:Ignorable="d" 
             Background="#edd5ad"
             d:DesignHeight="450" Width="300">
    <Grid x:Name="CardBase">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label x:Name="CardName" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <StackPanel x:Name="CostPanel" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Image x:Name="CardPicture"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="PowerPNL" Grid.Column="0"/>
            <StackPanel x:Name="SigilPNL" Grid.Column="1"/>
            <StackPanel x:Name="HealthPNL" Grid.Column="2"/>
        </Grid>
        <Canvas Grid.RowSpan="3"/>
    </Grid>
</UserControl>
