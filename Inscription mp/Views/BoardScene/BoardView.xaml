<inscription_mp:View  
    x:Class="Inscription_mp.Views.BoardScene.BoardView" 
	x:TypeArguments="inscription_scenes:BoardScene" 
	xmlns:inscription_mp="clr-namespace:Inscription_mp"
	xmlns:inscription_scenes="clr-namespace:Inscription_Server.Scenes;assembly=Inscription_Server"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Inscription_mp.Views"
	mc:Ignorable="d" 
	d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <StackPanel>
            <StackPanel x:Name="OpponentSTP" Orientation="Horizontal"/>
            <StackPanel x:Name="PlayerSTP" Orientation="Horizontal" MouseDown="BoardGrid_MouseDown"/>
        </StackPanel>
    </Viewbox>
</inscription_mp:View>
