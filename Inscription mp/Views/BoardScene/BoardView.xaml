<inscryption_mp:View
    x:Class="Inscryption_mp.Views.BoardScene.BoardView"
    x:ClassModifier="internal"
	x:TypeArguments="inscryption_scenes:BoardScene" 
	xmlns:inscryption_mp="clr-namespace:Inscryption_mp"
	xmlns:inscryption_scenes="clr-namespace:Inscryption_Server.Scenes;assembly=Inscryption_Server"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Inscryption_mp.Views"
	mc:Ignorable="d"
	d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <StackPanel>
            <StackPanel x:Name="OpponentSTP" Orientation="Horizontal"/>
            <StackPanel x:Name="PlayerSTP" Orientation="Horizontal" MouseDown="BoardGrid_MouseDown"/>
        </StackPanel>
    </Viewbox>
</inscryption_mp:View>
